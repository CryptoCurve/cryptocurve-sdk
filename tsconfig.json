{
  "compilerOptions": {
    "outDir": "./bin/",
    "typeRoots" : ["./node_modules/@types"],
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es2015",
    "jsx": "react",
    "target": "es2015",
    "allowJs": true,
    "baseUrl": "./src/",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": [
    "./src/"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}